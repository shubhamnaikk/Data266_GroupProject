version: "3.9"

services:
  postgres:
    image: postgres:16
    container_name: dblens_pg
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: dblens
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres -d dblens"]
      interval: 5s
      timeout: 3s
      retries: 20
    volumes:
      - pgdata:/var/lib/postgresql/data
      - ./db/init:/docker-entrypoint-initdb.d

  ingester:
    build:
      context: ./services/ingester
    depends_on:
      postgres:
        condition: service_healthy
    environment:
      LOADER_RW_DSN: ${LOADER_RW_DSN}
      APP_RO_DSN: ${APP_RO_DSN}
    working_dir: /app
    volumes:
      - ./services/ingester:/app
      - ./tmp:/tmp

volumes:
  pgdata: